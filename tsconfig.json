{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "lib": ["esnext"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "examples", "docs", "lib", "build", "dist"]
}
